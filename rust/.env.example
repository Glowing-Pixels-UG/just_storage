# Database configuration
DATABASE_URL=postgres://just_storage:just_storage_pass@localhost:5432/just_storage

# Server configuration
HOST=0.0.0.0
PORT=8080

# Storage configuration
STORAGE_PATH=./data/blobs
MAX_UPLOAD_SIZE=104857600  # 100 MB in bytes

# Authentication (set DISABLE_AUTH=true for development without auth)
DISABLE_AUTH=false
JWT_SECRET=your-secret-key-change-in-production
API_KEYS=key1,key2,key3  # Comma-separated list of valid API keys

# Logging
RUST_LOG=info
